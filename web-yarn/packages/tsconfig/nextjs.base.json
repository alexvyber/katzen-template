{
  "extends": "./base.json",
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "target": "es2019",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "esnext",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve"
  },
  "display": "Next.js",
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src",
    "next-env.d.ts"
  ]
}
