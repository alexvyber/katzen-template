{
  "name": "katzen",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "clean": "turbo run clean",
    "dev": "turbo run dev --parallel",
    "fix-lint": "cp -r apps/web/node_modules/next node_modules/next",
    "format": " rustywind --write . ; prettier --write \"**/*.{cjs,mjs,js,json,ts,tsx,md}\" ",
    "gen": "turbo run gen",
    "lint": "turbo run lint",
    "sort-package-json": "npx sort-package-json && npx sort-package-json apps/web/package.json && npx sort-package-json apps/cms/package.json",
    "start": "turbo run start"
  },
  "devDependencies": {
    "eslint-config-custom": "*",
    "prettier": "latest",
    "rustywind": "^0.15.1",
    "turbo": "latest"
  },
  "packageManager": "yarn@1.22.19",
  "engines": {
    "node": ">=18.0.0"
  }
}
